{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",    // for windows "command": "cmd"
    "isShellCommand": true,
    "args": [ "-c" ],   // for windows "args": ["/C"]
    "tasks": [
        {
            "taskName": "eslint",
            "suppressTaskName": true,
            "args": [
                "./node_modules/eslint/bin/eslint.js . --ext .ts ./tslint.json"
            ],
            "problemMatcher": [
                "$eslint-stylish"   
            ]
        },{
            "taskName": "tslint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": {
                "base": "$tslint5"
            }
        }
    ]
    
}