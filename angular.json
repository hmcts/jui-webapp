{
  "$schema": "./node_modules/@angular-devkit/core/src/workspace/workspace-schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "jui": {
      "root": "",
      "projectType": "application",
      "cli": {},
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/jui-frontend/main",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/public",
                "output": "/public"
              },
              {
                "glob": "favicon.ico",
                "input": "src",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@hmcts/frontend/assets",
                "output": "/public"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@hmcts/frontend/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "node_modules/govuk-frontend/assets",
                "output": "/public"
              },
              {
                "glob": "**/*",
                "input": "node_modules/govuk-frontend/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "src/public/sass/annotation-ui-theme.scss",
              "src/styles.scss"
            ],
            "scripts": [
              "src/public/javascripts/pdf.js",
              "src/public/javascripts/pdf_viewer.js",
              "src/public/javascripts/pdf-annotate.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/jui-frontend/server",
            "main": "src/server.main.ts",
            "tsConfig": "src/tsconfig.server.json"
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "jui:build",
            "port": 3000
          },
          "configurations": {
            "production": {
              "browserTarget": "jui:build:production"
            }
          }
        },
        "udk": {
          "builder": "udk:udk-builder",
          "options": {
            "main": "src/server.main.ts",
            "browserTarget": "jui:build",
            "serverTarget": "jui:server",
            "deleteOutputPath": false
          },
          "configurations": {
            "production": {
              "browserTarget": "jui:build:production",
              "serverTarget": "jui:server:production",
              "verbose": true
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "jui:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "codeCoverage": true,
            "codeCoverageExclude": [
              "**/*.spec.ts",
              "**/*.spec.js",
              "test/**",
              "config/**",
              "api/**/templates/**",
              "src/public/**",
              "src/environments/**"
            ],
            "main": "src/test.ts",
            "karmaConfig": "./test/karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/public",
                "output": "/public"
              },
              {
                "glob": "favicon.ico",
                "input": "src",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@hmcts/frontend/assets",
                "output": "/public"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@hmcts/frontend/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "node_modules/govuk-frontend/assets",
                "output": "/public"
              },
              {
                "glob": "**/*",
                "input": "node_modules/govuk-frontend/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "gov-ui": {
      "root": "projects/gov-ui",
      "sourceRoot": "projects/gov-ui/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/gov-ui/tsconfig.lib.json",
            "project": "projects/gov-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "projects/gov-ui/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/gov-ui/src/test.ts",
            "tsConfig": "projects/gov-ui/tsconfig.spec.json",
            "karmaConfig": "projects/gov-ui/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/gov-ui/tsconfig.lib.json",
              "projects/gov-ui/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "cli": {},
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}